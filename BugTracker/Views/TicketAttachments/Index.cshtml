@model IEnumerable<BugTracker.Models.TicketAttachment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AttachedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AttachmentUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAttached)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AttachedBy.FirstName)
        </td>
        <td>@if (item.AttachmentUrl != null)
        {
            <p align="center"><img class="img-responsive" src="@Url.Content(item.AttachmentUrl)" /></p>
        }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAttached.UtcDateTime)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
