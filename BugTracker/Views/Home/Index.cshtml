@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid">
  
    <br />
    <br />

    <div class="row">
        
        <div class="col-md-4">
            <br />
           <p align="center"><img src="~/Attachments/BugTrackerCollage.jpg" /></p>
         </div>
        
       


        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">About</h3>
                </div>
                <div class="panel-body">
                    BugTracker is a Secured Web Application used by software developers to keep track
                    of issues, tasks, projects, and people when developing and or improving their applictions.
                    To get started please register or login using the folling guest credentials
                </div>
            </div>

        </div>

            <div class="col-md-4">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Guest Login</h3>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>Admin - @Html.ActionLink("LoginAsAdminDemo","LoginAsAdminDemo", "Account") </li>
                            <li>Project Manager - @Html.ActionLink("LoginAsProjectManagerDemo", "LoginAsProjectManagerDemo", "Account")</li>
                            <li>Developer -  @Html.ActionLink("LoginAsDeveloperDemo","LoginAsDeveloperDemo", "Account")</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
</div>

